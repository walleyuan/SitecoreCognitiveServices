@model Microsoft.ProjectOxford.Vision.Contract.Description

@if (Model != null)
{
    <div class="detail-box">
        <h3>Description</h3>
        <div>
            <h4>Captions</h4>
            <div>
                @foreach (var cp in Model.Captions)
                {
                    <div>
                        <label>@cp.Text: </label>
                        @Html.Partial("Common/MeasureBar", (float)cp.Confidence)
                    </div>
                }
            </div>
        </div>
        <div>
            <h4>Tags</h4>
            <div class="tag-list">
                <span>
                    @Html.Raw(string.Join("</span>, <span>", Model.Tags))
                </span>
            </div>
        </div>
    </div>
}