@{
    ViewBag.Title = "Search News";
    Layout = "~/Views/CognitiveLaunch/CognitiveLaunchLayout.cshtml";
}

<div class="frame">
    <form class="form news-search-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/GetNewsSearch">
        <fieldset>
            <legend>News Search</legend>
            <div class="form-row">
                <input type="text" name="text" id="text"/>
                <div class="results"></div>
            </div>
            <div class="scWizardButtons">
                <button class="form-submit">Search News</button>
            </div>
        </fieldset>
    </form>
    <form class="form news-trend-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/GetNewsTrendSearch">
        <fieldset>
            <legend>News Trend Search</legend>
            <div class="form-row">
                <div class="results"></div>
            </div>
            <div class="scWizardButtons">
                <button class="form-submit">Search News Trends</button>
            </div>
        </fieldset>
    </form>
    <form class="form news-category-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/GetNewsCatSearch">
        <fieldset>
            <legend>News Category Search</legend>
            <div class="form-row">
                <select name="category" id="category">
                    <option value="Business">Business</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Health">Health</option>
                    <option value="Politics">Politics</option>
                    <option value="ScienceAndTechnology">ScienceAndTechnology</option>
                    <option value="Sports">Sports</option>
                    <option value="USUK">USUK</option>
                    <option value="World">World</option>
                </select>
                <div class="results"></div>
            </div>
            <div class="scWizardButtons">
                <button class="form-submit">Search News Category</button>
            </div>
        </fieldset>
    </form>
</div>