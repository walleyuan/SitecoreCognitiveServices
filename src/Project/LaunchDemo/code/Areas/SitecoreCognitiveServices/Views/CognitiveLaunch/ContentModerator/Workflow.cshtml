@model SitecoreCognitiveServices.Project.LaunchDemo.Models.WorkflowResult
@{
    ViewBag.Title = "Content Moderator - Workflow";
    Layout = "~/Views/CognitiveLaunch/CognitiveLaunchLayout.cshtml";
}

<div class="frame">
    <form class="form cm-workflow-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/ContentModeratorWorkflowgetall">
        <fieldset>
            <legend>Get All Workflows</legend>
            <div class="form-row">
                <label>Team Name</label>
                <input type="text" name="teamName" />
            </div>
            <div class="scWizardButtons">
                <input type="submit" value="Get All Workflows" />
            </div>
            @if(Model.Workflows != null && Model.Workflows.Any()) {
                <br/>
                <div>
                    <h3>Workflows</h3>
                    <ul>
                        @foreach (var w in Model.Workflows)
                        {
                            <li>@w.Name - @w.Description</li>
                        }
                    </ul>
                </div>
            }
        </fieldset>
    </form>
    <form class="form cm-workflow-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/ContentModeratorWorkflowget">
        <fieldset>
            <legend>Get Workflow</legend>
            <div class="form-row">
                <label>Team Name</label>
                <input type="text" name="teamName" />
            </div>
            <div class="form-row">
                <label>Workflow Name</label>
                <input type="text" name="workflowName" />
            </div>
            <div class="scWizardButtons">
                <input type="submit" value="Get Workflow" />
            </div>
            @if (Model.Workflow != null)
            {
                <br />
                <div>
                    <label>Name: </label> @Model.Workflow.Name
                </div>
                <div>
                    <label>Description: </label> @Model.Workflow.Description
                </div>
            }
        </fieldset>
    </form>
    <form class="form cm-workflow-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/ContentModeratorWorkflowcreate">
        <fieldset>
            <legend>Create Workflow</legend>
            <div class="form-row">
                <label>Team Name</label>
                <input type="text" name="teamName"/>
            </div>
            <div class="form-row">
                <label>Workflow Name</label>
                <input type="text" name="workflowName"/>
            </div>
            <div class="scWizardButtons">
                <input type="submit" value="Create Workflow"/>
            </div>
        </fieldset>
    </form>
</div>