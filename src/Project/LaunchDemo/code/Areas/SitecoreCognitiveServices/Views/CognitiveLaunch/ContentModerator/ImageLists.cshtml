@model SitecoreCognitiveServices.Project.LaunchDemo.Models.ImageListResult
@{
    ViewBag.Title = "Content Moderator - Image Lists";
    Layout = "~/Views/CognitiveLaunch/CognitiveLaunchLayout.cshtml";
}

<div class="frame">
    <form class="form cm-image-list-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/ContentModeratorImageAddList">
        <fieldset>
            <legend>Create Image List</legend>
            <div class="form-row">
                <label>List Name</label>
                <input type="text" name="name" />
            </div>
            <div class="form-row">
                <label>List Description</label>
                <input type="text" name="description" />
            </div>
            <div class="scWizardButtons">
                <input type="submit" value="Create Image List" />
            </div>
            @if (Model.List != null)
            {
                <br/>
                <div>
                    <div>
                        <label>Id: </label> @Model.List.Id
                    </div>
                    <div>
                        <label>Name: </label> @Model.List.Name
                    </div>
                    <div>
                        <label>Description: </label> @Model.List.Description
                    </div>
                </div>
            }
        </fieldset>
    </form>
    <form class="form cm-image-list-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/ContentModeratorImageGetAllLists">
        <fieldset>
            <legend>Get All Image Lists</legend>
            <div class="form-row">
                <input type="hidden" name="placeholder" value="" />
            </div>
            <div class="scWizardButtons">
                <input type="submit" value="Get All Image Lists" />
            </div>
            @if (Model.Lists != null)
            {
                foreach (var l in Model.Lists)
                {
                    <br />
                    <div>
                        <div>
                            <label>Id: </label> @l.Id
                        </div>
                        <div>
                            <label>Name: </label> @l.Name
                        </div>
                        <div>
                            <label>Description: </label> @l.Description
                        </div>
                    </div>
                }
            }
        </fieldset>
    </form>
    <form class="form cm-image-list-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/ContentModeratorImageAdd">
        <fieldset>
            <legend>Add Image</legend>
            <div class="form-row">
                <label>Image Url</label>
                <input type="text" name="imageUrl"/>
            </div>
            <div class="form-row">
                <label>List Id</label>
                <input type="text" name="listId" />
            </div>
            <div class="scWizardButtons">
                <input type="submit" value="Add Image"/>
            </div>
            @if (Model.Image != null)
            {
                <br/>
                <div>
                    <div>
                        <label>Content Id: </label> @Model.Image.ContentId
                    </div>
                    <div>
                        <label>Status: </label> @Model.Image.Status
                    </div>
                    <div>
                        <label>Tracking Id: </label> @Model.Image.Trackingid
                    </div>
                </div>
            }
        </fieldset>
    </form>
    <form class="form cm-image-list-form" method="post" action="/SitecoreCognitiveServices/CognitiveLaunch/ContentModeratorImageGetAll">
        <fieldset>
            <legend>Get All Image Ids</legend>
            <div class="form-row">
                <label>List Id</label>
                <input type="text" name="listId" />
            </div>
            <div class="scWizardButtons">
                <input type="submit" value="Get All Images" />
            </div>
            @if (Model.Images != null)
            {
                foreach (var i in Model.Images.ContentIds)
                {
                    <br />
                    <div>
                        <div>
                            <label>Content Id: </label> @i
                        </div>
                    </div>
                }
            }
        </fieldset>
    </form>
</div>